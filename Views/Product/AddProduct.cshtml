@model Product
<form asp-action="AddProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
    <h2>Add New Product</h2>
    <table class="table table-light">
        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="productName">Name:</label>
                    <input asp-for="productName" class="form-control" />
                    <span asp-validation-for="productName" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="description">Description:</label>
                    <input asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="size">Size:</label>
                    <input asp-for="size" class="form-control" />
                    <span asp-validation-for="size" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <label asp-for="price">Price:</label>
                    <input asp-for="price" class="form-control" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <label>Materials:</label><br>
                    @foreach (var material in ViewBag.Materials)
                    {
                        <div class="form-check form-check-inline">
                            <input type="checkbox" id="material-@material.materialId" name="materials" value="@material.materialId" class="form-check-input">
                            <label class="form-check-label" for="material-@material.materialId">@material.name</label>
                        </div>
                    }
                    <span class="text-danger" asp-validation-for="materials"></span>
                </div>
            </td>
        </tr>


            <td>
                <div class="form-group">
                    <label asp-for="ImagePath">Image:</label>
                    <input type="file" name="ImagePath" class="form-control-file" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>

                </div>
            </td>
        </tr>
        <tr>
            <td>
                <button type="submit" class="btn btn-primary">Add</button>
            </td>
        </tr>
    </table>
</form>
