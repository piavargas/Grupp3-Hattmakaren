@model Product

<form asp-controller="Product" asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="ProductId" />
    <table class="table table-light">
        <div class="form-group">
            <tr>
                <td>
                    <label asp-for="productName"></label>:
                    <input asp-for="productName" type="text" />
                <span asp-validation-for="productName" class="text-danger"></span>

                </td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <td>
                    <label asp-for="description"></label>:
                    <input asp-for="description" type="text" />
                <span asp-validation-for="description" class="text-danger"></span>
                </td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <td>
                    <label asp-for="size"></label>:
                    <input asp-for="size" type="text" />
                <span asp-validation-for="size" class="text-danger"></span>
                </td>
            </tr>
        </div>
        <div class="form-group">
        <tr>
            <td>
                <label asp-for="price"></label>:
                <input asp-for="price" type="text" />
                <span asp-validation-for="price" class="text-danger"></span>
            </td>
        </tr>
        </div>
        <tr>
            <td>
                <input type="submit" value="Edit" class="btn-primary" />
            </td>
        </tr>
    </table>
</form>
