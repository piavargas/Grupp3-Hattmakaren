@model Admin
@{
    ViewBag.Titel = "Login";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/LogIn.css" rel="stylesheet">
</head>

<body class="text-center login-page">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form class="form-signin" method="post" asp-action="LogIn">
        <h1 class="h3 mb-3 font-weight-normal">Välkommen</h1>
        <input type="boxSpace" asp-for="UserName" class="form-control" placeholder="Användarnamn" required autofocus />
        <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Lösenord" required />

        <button class="btn btn-lg btn-primary btn-block" type="submit">Logga in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2024</p>

        @* <label>Registrera ny admin?</label> *@
        @* <a asp-action="Register">Register!</a> *@
    </form>
</body>
</html>