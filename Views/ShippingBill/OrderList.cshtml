@model IEnumerable<Grupp3Hattmakaren.Models.Order>


@* OrderList.cshtml*@
 <h1>Orders</h1>
<table class="table"> 
    <thead> 
        <tr> 
            <th>Order ID</th> 
            <th>Customer Name</th> 
            <th>Address</th> 
            <th>Product</th> 
            <th>Total Price</th> 
        </tr> 
    </thead> 
 
    <tbody> @foreach (var order in Model)
        {
            <tr> 
                <td>@order.OrderId</td> 
                <td>@order.Customer.firstName @order.Customer.lastName</td>
                <td>@order.Address.streetName</td>
                <td>@order.isPayed.ToString().ToUpper()</td>
                <td>
                    <!-- Update OrderList.cshtml -->
                    <a asp-action="PrintShippingBill" asp-controller="ShippingBill" asp-route-id="@order.OrderId" class="btn btn-primary">Print Waybill</a>

                    <!-- No changes needed in PrintShippingBill.cshtml -->
                </td>
            </tr>
        } </tbody> </table>