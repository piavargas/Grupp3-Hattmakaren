<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/AdminMyPage.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <title>Admin Dashboard Panel</title>
</head>
<html>
<body>
    <nav>
        <div class="menu-items">
            <ul class="nav-links">
                <li>
                    <a href="AdminEnquiries">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Enquiries</span>
                    </a>
                </li>
                <li>
                    <a href="AdminOrders">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Orders</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Order materials</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Order summation</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Print waybill</span>
                    </a>
                </li>
                <li>
                    <a href="AdminOrderHistory">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Order history</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="dash-content">
            <div class="activity">
                <div class="title">
                    <i class="uil uil-clock-three"></i>
                    <span class="text">Order History</span>
                </div>
                <div class="activity-data">
                    @foreach (var order in ViewBag.oldOrderList)
                    {
                        if (order.isPayed)
                        {
                            <div class="data">
                                <div class="data-item">
                                    <span class="data-title">Customer</span>
                                    <span class="data-list">@order.Customer.firstName @order.Customer.lastName</span>
                                </div>
                                <div class="data-item">
                                    <form method="post" action="@Url.Action("ChangePaymentStatus", "Admin")">
                                        <input type="hidden" name="orderId" value="@order.OrderId" />
                                        @if (!order.isPayed)
                                        {
@*                                             <button type="submit" name="status" value="toggle">
                                                <text>Mark as paid </text>
                                            </button> *@
                                            <button type="submit" name="status" value="toggle" class="custom-button">Mark as paids</button>

                                        }
                                        else
                                        {
                                            <text>Paid</text>
                                        }
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </section>
    <script src="~/js/AdminMyPage.js"></script>
</body>
</html>
