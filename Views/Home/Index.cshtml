<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Välkommen till Hattmakaren</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Anpassa CSS för att förbättra utseendet */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 50px;
        }

        .product-container {
            margin: 0 auto;
            max-width: 800px;
        }

        .product-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
            padding: 20px;
            margin-bottom: 20px;
            transition: box-shadow 0.3s ease;
        }

            .product-card:hover {
                box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.2);
            }

        .product-image {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .product-name {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .product-description {
            color: #666;
            margin-bottom: 15px;
        }

        .product-details {
            color: #888;
            margin-bottom: 15px;
        }

        .product-price {
            font-size: 20px;
            color: #007bff;
            font-weight: bold;
        }

        .btn {
            border-radius: 25px;
            padding: 8px 20px;
            font-size: 16px;
            font-weight: bold;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container product-container">
        <h1 class="text-center mb-5">Välkommen till Hattmakaren</h1>

        <div class="row">
            @foreach (var prod in Model)
            {
                <div class="col-md-6">
                    <div class="product-card">
                        <img src="@prod.ImagePath" alt="Product Image" class="product-image">
                        <h2 class="product-name">@prod.productName</h2>
                        <p class="product-description">@prod.description</p>
                        <p class="product-details">Storlek: @prod.size cm</p>
                        <p class="product-price">@prod.price SEK</p>
                        @if(User.IsInRole("Customer"))
                        {
                            //Form för att lägga till en produkt i kundvagnen
                            using (Html.BeginForm("AddToCart", "Product", FormMethod.Post))
                            {
                                <input type="number" name="productId" id="productId" value="@prod.ProductId" hidden />
                                <button type="submit" class="btn btn-success">Add to Cart</button>

                            }
                        }
                        else if(User.IsInRole("Admin"))
                        {
                            <div class="text-center">
                                <form asp-controller="Product" asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@prod.ProductId" />
                                    <button type="submit" class="btn btn-danger mr-2">Radera</button>
                                </form>
                                <a href="Product/EditProduct/@prod.ProductId" class="btn btn-primary">Redigera</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

    @if (User.IsInRole("Admin"))
    {
        <tr>
            <a href="Product/AddProduct">Lägg till produkt</a>
            <br />
        </tr>
    }

    @if (User.IsInRole("Customer"))
        {
            <tr>  
                <a href="Customer/CustomerOrderForm">Place Hat Order</a>
            </tr>
        }
    </div>
  
  

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.5.4/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>

