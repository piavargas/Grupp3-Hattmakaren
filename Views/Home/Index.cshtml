     @model List<Product>


<form asp-controller="ProductController" asp-action="Add" method="post">
<table class="table-bordered">
  
    <tbody>

        @foreach (var prod in Model)
        {
            <tr>
                
                <td>@prod.productName</td>
                <td>@prod.description</td>
                <td>@prod.size</td>
            </tr>
        }
    </tbody>

            <tr>

            <a href="Product/AddProduct">Lägg till produkt</a>
        </tr>

</table>
</form>
